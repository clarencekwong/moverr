<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table style="width:85%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.title, job %></td>
        <td><%= link_to job.date.time.strftime("%b %d, %Y at %I:%M%P"), job %></td>
        <td><%= link_to job.status, job %></td>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Job', new_job_path %>
