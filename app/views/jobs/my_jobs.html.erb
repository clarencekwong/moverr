<p id="notice"><%= notice %></p>

<h1>My Jobs</h1>

<h4>Posted Jobs</h4>
<table style="width:85%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posted_jobs.each do |job| %>
      <tr>
        <td><%= link_to job.title, job %></td>
        <td><%= link_to job.date.time.strftime("%b %d, %Y at %I:%M%P"), job %></td>
        <td><%= link_to job.status, job %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Post a New Job', new_job_path %>
<br><br>

